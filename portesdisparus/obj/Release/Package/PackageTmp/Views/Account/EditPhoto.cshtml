
@{
    ViewBag.Title = "Upload Picture";
}
@Html.ActionLink("Return to profile", "ProfileMember")
<h2>Edit the Photo</h2>


<div class="col-md-7">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Your photo</h3>
            <div><span class="info" id="result"></span></div>
        </div>
@using (Html.BeginForm("EditPhoto", "Account", new { id = ViewBag.UserId }, FormMethod.Post, new { @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
            <div class="box-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                <div class="form-group">
                    <label class="control-label col-md-3" for="InputFile">Image selected</label>
                    <div class="col-md-9">
                        <input type="file" name="InputFile" id="InputFile">
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="col-md-offset-4">
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </div>
            </div>
}
    </div>
</div>

@Scripts.Render("~/dist/js")



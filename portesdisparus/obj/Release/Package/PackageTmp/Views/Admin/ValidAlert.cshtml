@model PeopLost.Web.Models.AlertStatusModel



<h2>ValidAlert</h2>


@{
    ViewBag.Title = "Valid the Alert";
}
@Html.ActionLink("Return to your list", "Alerts")
<h2>Valid the alert</h2>


<div class="col-md-7">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Your alert @ViewBag.Concrete</h3>
            <div><span class="info alert-info" id="result"></span></div>
        </div>
@using (Html.BeginForm("ValidAlert", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
            @Html.AntiForgeryToken()
            <div class="box-body">
                
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConcreteAlert, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">

                            
                            <label class="control-label radio-inline">
                                @Html.RadioButtonFor(model => model.ConcreteAlert, true, true) @Html.Label("Concrete")
                            </label>
                            <label class="control-label radio-inline">
                                @Html.RadioButtonFor(model => model.ConcreteAlert, false, false) @Html.Label("Not concrete")
                            </label>
                         
                        </div>

                </div>
                <div class="box-footer">
                    <div class="col-md-offset-4">
                        <button type="submit" class="btn btn-primary">Valid the alert</button>
                    </div>
                </div>
            </div>
}
    </div>
</div>
